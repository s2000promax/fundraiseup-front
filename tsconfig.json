{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/build/buildWebpackConfig.ts",
    //    "./config/storybook/webpack.config.ts",
//    "./config/jest/setupTest.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": ["build", "node_modules"]
}
